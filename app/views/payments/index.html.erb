
<h2>Payments</h2>

<table id="payments" class="table table-striped table-hover table-responsive">
  <thead>
    <tr>
      <th>Recipient</th>
      <th>Amount</th>
      <th>Currency</th>
      <th>Status</th>
      <th>Payment Id</th>
    </tr>
  </thead>
  <tbody>
  <% @payments.each do |payment| %>
    <tr>
      <td><%= payment['recipient'] %></td>
      <td><%= payment['amount'] %></td>
      <td><%= payment['currency'] %></td>
      <td><%= payment['status'] %></td>
      <td><%= payment['id'] %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br />

<h3>Create new Payment</h3>

<form id="new_payment" method="post" action="<%= payments_path %>" class="form-horizontal">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <div class="form-group">
    <label for="amount" class="col-sm-2 control-label">Amount</label>
    <div class="col-sm-10">
      <input type="text" name="amount" class="form-control">
    </div>
  </div>

  <div class="form-group">
    <label for="amount" class="col-sm-2 control-label">Currency</label>
    <div class="col-sm-10">
      <select name="currency" class="form-control">
        <option value="GBP">GBP</option>
      </select>
    </div>
  </div>

  <div class="form-group">
    <label for="recipient_id" class="col-sm-2 control-label">Recipient</label>
    <div class="col-sm-10">
      <select name="recipient_id" class="form-control">
        <% @recipients.each do |recipient| %>
          <option <%= recipient['id'] %>><%= recipient['name'] %></option>
        <% end %>
      </select>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-success">Send Payment</button>
    </div>
  </div>

</form>
