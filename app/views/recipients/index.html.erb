
<h2>Recipients</h2>

<table id="recipients" class="table table-striped table-hover table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Id</th>
    </tr>
  </thead>
  <tbody>
  <% @recipients.each do |recipient| %>
    <tr><td><%= recipient['name'] %></td><td><%= recipient['id'] %></td></tr>
  <% end %>
  </tbody>
</table>

<br />

<h3>Create a new Recipient</h3>
<form id="new_recipient" method="post" action="<%= recipients_path %>" class="form-inline">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <div class="form-group">
    <label for="name">Recipient's Name</label>
    <input type="text" class="form-control" name="name">
  </div>
  <button type="submit" class="btn btn-default">Create</button>
</form>
